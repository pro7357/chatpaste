{
  "manifest_version": 3,
  "name": "ChatPaste",
  "version": "2.0.1",
  "description": "Paste chat from ChatGPT to terminal.",
  "host_permissions": ["https://chat.openai.com/chat/*"],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/chat/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
